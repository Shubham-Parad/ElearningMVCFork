@model List<Course>

<style>
    .trans {
        background-color: transparent;
        border: none;
        color: white;
    }
</style>

<!-- Header Start-->
<div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom" style="margin-bottom: 90px;">
    <div class="container text-center py-5">
        <h1 class="text-white display-1">Courses</h1>
        <div class="d-inline-flex text-white mb-5">
            <p class="m-0 text-uppercase"><a class="text-white" asp-controller="home" asp-action="index">Home</a></p>
            <i class="fa fa-angle-double-right pt-1 px-3"></i>
            <p class="m-0 text-uppercase">Courses</p>
        </div>
        <div class="mx-auto mb-5" style="width: 100%; max-width: 600px;">
            <form class="input-group" method="post" asp-action="Course" asp-controller="User">
                <div class="input-group-prepend">
                    <select name="dropdownCourse" class="form-control btn btn-outline-light bg-white h-100 text-body px-4 dropdown-toggle" aria-haspopup="true" id="DropDownList1">
                        @foreach (var c in Model)
                        {
                            <option value="@c.Id">@c.Cname</option>
                        }
                    </select>
                </div>
                <input id="TextBox1" class="form-control border-light" style="padding: 30px 25px;" placeholder="Keyword" />
                <div class="input-group-append">
                    <input class="btn btn-secondary px-4 px-lg-5" id="Button1" type="submit" value="Search" />
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Courses Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row mx-0 justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center position-relative mb-5">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Our Courses</h6>
                    <h1 class="display-4">Checkout New Releases Of Our Courses</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
@if (Model != null && Model.Any())
{
    @* <div id="DataList1" style="height: 500px; width: 100%; display:flex;flex-wrap:wrap"> *@
        <div class="row" style="width:100%">
        @foreach (var d in Model)
        {
            <div class="col-lg-4 col-md-6 pb-4" >
                <a asp-action="details" asp-controller="user" asp-route-id="@d.Id" class="courses-list-item position-relative d-block overflow-hidden mb-2" style="height: 80%; width: 30vw">
                    <img class="img-fluid" src="@d.Banner" alt="">
                    <div class="courses-text">
                        <h4 class="text-center text-white px-3">
                            <label id="cnameLabel">@d.Cname</label>
                        </h4>
                        <h3 class="text-center text-white px-3">
                            <label id="cnameLabel2">@d.Subname</label>
                        </h3>
                        <div class="border-top w-100 mt-3">
                            <div class="d-flex justify-content-between p-4">
                                <span class="text-white">
                                    &#8377;
                                    <label id="priceLabel">@d.Price</label>
                                </span>
                                <span class="text-white"><i class="fa fa-star mr-2"></i>4.5<small>(250)</small></span>
                                <button class="trans" id="Button2">Get Details</button>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
  else
{
    <div class="text-center text-white">
        <p>No courses available at the moment.</p>
    </div>
}
</div>
<div >
    <nav aria-label="Page navigation">
        <ul class="pagination pagination-lg justify-content-center mb-0">
            <li class="page-item disabled">
                <a class="page-link rounded-0" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span> <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link rounded-0" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span> <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
<!-- Courses End -->
